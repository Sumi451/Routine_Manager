<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions: In the future, you might need internet permission for API calls -->
    <!-- <uses-permission android:name="android.permission.INTERNET" /> -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RoutineManager">

        <!-- Declaring the main activity of the app. -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Declaring the Timetable App Widget Provider.
             This will handle the widget's lifecycle events. -->
        <receiver android:name=".TimetableWidgetProvider"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <!-- NEW: Add the custom action for refreshing -->
                <action android:name="com.example.routinemanager.ACTION_REFRESH_WIDGET" />
            </intent-filter>
            <!-- Meta-data to link to the widget's layout and settings -->
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/timetable_widget_info" />
        </receiver>

        <!-- Declaring the RemoteViewsService for the App Widget.
             This will be used by the widget to display a list view. -->
        <service
            android:name=".TimetableWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS"
            android:exported="false" />

    </application>
</manifest>
